<div class="wrapper text-center">
  <div class="container">
    <h1>Create a new Cocktail</h1>
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name, label: "Nom du Cocktail" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add Cocktail", class: "btn btn-success" %>
      <% end %>
      <%= link_to "Cancel", cocktails_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
